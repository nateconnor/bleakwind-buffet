@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <form id="buffet-menu">
        


        <div class="text-center">
            <h1 class="display-4">Bleakwind Buffet</h1>
            <p>
                We at Bleakwind Buffet are proud to bring you authentic fantasy meals
                straight from the world of Skyrim. Shake the blood off your sword and sake your thirst
                with one of our old-fashioned sailor sodas. Hack into a Smokehouse Skeleton with your dagger.
                Or vanquish the the mighty Thalmor Triple Burger!
                You’ve had a hard adventure and earned your loot, so spend it with us!.
            </p>

            <div id="search">
                <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
                <input type="submit" value="Search">
            </div>

            <h4>Order Type</h4>

            @foreach (String type in BleakwindBuffet.Data.Menu.OrderTypes)
            {
                <label>
                    <input type="checkbox" name="OrderTypes" value="@type" checked="@Model.OrderTypes.Contains(type)" />
                    @type
                </label>
            }

            <h4>Calories</h4>
            <div>
                Between
                <input name="calMin" type="number" min="0" max="2000" step="1" placeholder="min" />
                and
                <input name="calMax" type="number" min="0" max="2000" step="1" placeholder="min" />
            </div>

            <h4>Price</h4>
            <div>
                Between
                <input name="priceMin" type="number" min="0" max="100" step="0.01" placeholder="min" />
                and
                <input name="priceMax" type="number" min="0" max="100" step="0.01" placeholder="min" />
            </div>




            <h2>Entrees</h2>
            <ul class="entrees">
                @foreach (BleakwindBuffet.Data.IOrderItem item in @Model.Entrees)
                {
                    <li>
                        <div class="menu-item">
                            <h3 class="name">@item.ToString()</h3>
                            <div class="price">$@item.Price</div>
                            <div class="calories">Calories: @item.Calories</div>


                        </div>

                    </li>
                }

            </ul>
            <h2>Sides</h2>
            <ul class="sides">
                @foreach (BleakwindBuffet.Data.IOrderItem item in @Model.Sides)
                {
                    <li>
                        <div class="menu-item">
                            <h3 class="name">@item.ToString()</h3>
                            <div class="price">$@item.Price</div>
                            <div class="calories">Calories: @item.Calories</div>


                        </div>

                    </li>
                }

            </ul>

            <h2>Drinks</h2>
            <ul class="drinks">
                @foreach (BleakwindBuffet.Data.IOrderItem item in @Model.Drinks)
                {
                    <li>
                        <div class="menu-item">
                            <h3 class="name">@item.ToString()</h3>
                            <div class="price">$@item.Price</div>
                            <div class="calories">Calories: @item.Calories</div>


                        </div>

                    </li>
                }

            </ul>
            <h4>Available Soda Flavors:</h4>
            <ul class="flavors">
                @foreach (BleakwindBuffet.Data.Enums.SodaFlavor flavor in Enum.GetValues(typeof(BleakwindBuffet.Data.Enums.SodaFlavor)))
                {
                    <li>

                        <div class="flavor">@flavor.ToString()</div>
                    </li>
                }
            </ul>

            <p>Any entree, side, and drink can be combined into a Combo with a $1 discount.</p>

        </div>

    </form>
